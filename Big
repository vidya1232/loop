class Big
/* OUTPUT:
1
121
12321
1234321
123454321
12345654321
1234567654321
*/
{
public static void main(String[]args)
{
	
for(int i=1;i<=7;i++)
	{
		for(int j=1;j<=i;j++)
		{
			System.out.print(j+" ");
		}
         if(i==2)
		 {
			 System.out.print(i-1);
		}
	if(i>2)
		for(int ji=i-1;ji>=1;ji--)
		{
			System.out.print(ji+" ");
		}
       		
		System.out.println();
		 
		}
		
}
}
