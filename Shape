class Shape
{
public static void main(String[]args)
{
for(int row=7;row>=1;row--)
   {
           for(int col=1;col<=row;col++)
      {
       System.out.print(col);
      }
	  System.out.println();
   }
for(int row=2;row<=7;row++)
   {
           for(int col=1;col<=row;col++)
      {
       System.out.print(col);
      }
	  System.out.println();
   }
   
}
}
/* OUTPUT:
1234567
123456
12345
1234
123
12
1
12
123
1234
12345
123456
1234567
*/
