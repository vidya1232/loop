class Watch
{
public static void main(String[]args)
{
int a = 1;
int b = 6;
for(int row=7;row>=1;row--)
{
for(int col=row;col<=7;col++)
	 {
	System.out.print(" ");
	 }	
for(int col=a;col<=7;col++)
{
System.out.print(col+" ");
 
}
	 a++;
System.out.println();	 
	 }
for(int row=6;row>=1;row--)
{
for(int col=1;col<=row;col++)
	 {
	System.out.print(" ");
	 }	
for(int col=b;col<=7;col++)
{
System.out.print(col+" ");
 
}
b--;	 
	System.out.println(); 
}
}
}	 
